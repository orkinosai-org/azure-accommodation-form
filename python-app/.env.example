# =============================================================================
# Azure Accommodation Form - Environment Configuration
# =============================================================================
# This file contains all configuration options that mirror the .NET 
# appsettings.json structure. Copy this to .env and update with your values.
# =============================================================================

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================
ENVIRONMENT=development
SECRET_KEY=your-secret-key-change-in-production-make-it-long-and-random

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8000
ALLOWED_HOSTS=localhost,127.0.0.1
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# SSL Configuration (for production)
SSL_KEYFILE=
SSL_CERTFILE=

# =============================================================================
# LOGGING CONFIGURATION (mirrors .NET LogLevel settings)
# =============================================================================
# Available levels: TRACE, DEBUG, INFORMATION, WARNING, ERROR, CRITICAL
LOGGING_DEFAULT_LEVEL=INFORMATION
LOGGING_MICROSOFT_LEVEL=WARNING
LOGGING_MICROSOFT_HOSTING_LIFETIME_LEVEL=INFORMATION

# Console logging format
LOGGING_CONSOLE_INCLUDE_SCOPES=false
LOGGING_CONSOLE_TIMESTAMP_FORMAT=HH:mm:ss 

# =============================================================================
# EMAIL SETTINGS (mirrors .NET EmailSettings)
# =============================================================================
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_USE_SSL=true
EMAIL_FROM_EMAIL=noreply@yourdomain.com
EMAIL_FROM_NAME=Azure Accommodation Form
EMAIL_COMPANY_EMAIL=admin@yourdomain.com

# Legacy environment variable names (for backward compatibility)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=Azure Accommodation Form
ADMIN_EMAIL=admin@yourdomain.com

# =============================================================================
# AZURE BLOB STORAGE SETTINGS (mirrors .NET BlobStorageSettings)
# =============================================================================
BLOB_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
BLOB_STORAGE_CONTAINER_NAME=form-submissions

# Legacy environment variable names (for backward compatibility)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=yourstorageaccount;AccountKey=yourkey;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER_NAME=form-submissions

# =============================================================================
# APPLICATION SETTINGS (mirrors .NET ApplicationSettings)
# =============================================================================
APPLICATION_APPLICATION_NAME=Azure Accommodation Form
APPLICATION_APPLICATION_URL=http://localhost:8000
APPLICATION_TOKEN_EXPIRATION_MINUTES=15
APPLICATION_TOKEN_LENGTH=6

# Legacy environment variable names (for backward compatibility)
APPLICATION_NAME=Azure Accommodation Form
APPLICATION_URL=http://localhost:8000
TOKEN_EXPIRATION_MINUTES=15
TOKEN_LENGTH=6

# =============================================================================
# APPLICATION INSIGHTS (mirrors .NET ApplicationInsights)
# =============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://your-region.in.applicationinsights.azure.com/
APPLICATIONINSIGHTS_AGENT_VERSION=~2
APPLICATIONINSIGHTS_XDT_MODE=default

# =============================================================================
# DIAGNOSTICS SETTINGS (mirrors .NET Diagnostics and Website)
# =============================================================================
DIAGNOSTICS_BLOB_RETENTION_DAYS=2
DIAGNOSTICS_HTTP_RETENTION_DAYS=2

# =============================================================================
# AZURE COMMUNICATION SERVICES (alternative to SMTP)
# =============================================================================
AZURE_COMMUNICATION_CONNECTION_STRING=

# =============================================================================
# CAPTCHA SETTINGS
# =============================================================================
CAPTCHA_PROVIDER=recaptcha
CAPTCHA_SITE_KEY=6LeIxAcTAAAAAJcZVRqyHh71UMIEGNQ_MXjiZKhI
CAPTCHA_SECRET_KEY=6LeIxAcTAAAAAGG-vFI1TnRWxMZNFuojJ4WifJWe

# =============================================================================
# MFA SETTINGS (uses ApplicationSettings for token configuration)
# =============================================================================
MFA_TOKEN_LENGTH=6
MFA_TOKEN_EXPIRY_MINUTES=10

# =============================================================================
# FORM SETTINGS
# =============================================================================
MAX_ADDRESS_HISTORY_YEARS=3
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png
MAX_FILE_SIZE_MB=10

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# ADMIN ACCESS
# =============================================================================
ADMIN_TOKEN=admin-secret-change-in-production