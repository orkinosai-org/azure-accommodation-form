<Router AppAssembly="typeof(Program).Assembly">
    <Found Context="routeData">
        <ErrorBoundary>
            <ChildContent>
                <RouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)" />
                <FocusOnNavigate RouteData="routeData" Selector="h1" />
            </ChildContent>
            <ErrorContent Context="exception">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">An error occurred!</h4>
                    <p>@exception.Message</p>
                    <hr>
                    <p class="mb-0">Please refresh the page or contact support if the problem persists.</p>
                </div>
            </ErrorContent>
        </ErrorBoundary>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="typeof(Layout.MainLayout)">
            <div class="alert alert-warning" role="alert">
                <h4 class="alert-heading">Page not found</h4>
                <p>Sorry, there's nothing at this address: <code>@System.Web.HttpUtility.HtmlEncode(NavigationManager.Uri)</code></p>
                <hr>
                <p class="mb-0">You can <a href="/">return to the home page</a> or use the navigation above.</p>
            </div>
        </LayoutView>
    </NotFound>
</Router>

@inject NavigationManager NavigationManager
